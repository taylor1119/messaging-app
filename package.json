{
	"name": "messaging-app",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"clean": "turbo run clean",
		"dev": "turbo run dev --no-cache --continue",
		"debug": "turbo run debug --no-cache --continue",
		"lint": "set TIMING=1 && turbo run lint",
		"format": "prettier --write --ignore-unknown --cache --cache-location=.prettier-cache .",
		"spell-check": "cspell --show-suggestions --relative --no-must-find-files --cache .",
		"prepare": "husky install"
	},
	"devDependencies": {
		"cspell": "^6.31.1",
		"husky": "^8.0.3",
		"prettier": "^2.8.7",
		"turbo": "^1.8.6"
	},
	"packageManager": "pnpm@8.0.0"
}
